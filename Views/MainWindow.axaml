<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:DynamicIsland.ViewModels"
        xmlns:reactive="clr-namespace:ReactiveUI;assembly=ReactiveUI"
        xmlns:viewModels="clr-namespace:DynamicIsland.ViewModels"
        x:Class="DynamicIsland.Views.MainWindow"
        TransparencyLevelHint="AcrylicBlur"
        Background="#393939"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="1"
        WindowStartupLocation="Manual"
        Title="DynamicIsland"
        MaxHeight="35" MaxWidth="380"
        MinHeight="35" MinWidth="380"
        x:DataType="viewModels:MainViewModel">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Window.Styles>
        <StyleInclude Source="../Styles/FontFamily.axaml"/>
    </Window.Styles>
    
    <Grid ColumnDefinitions="*, *, *">
        <Image Margin="20,5,0,0" Source="../Assets/icon.png" Height="33" Width="33" VerticalAlignment="Center" HorizontalAlignment="Left" ></Image>

        <Grid Grid.Column="1">
        </Grid>
        <Grid Grid.Column="2" RowDefinitions="*,*" VerticalAlignment="Center">
            <TextBlock  Classes="Normal" VerticalAlignment="Bottom" TextAlignment="Center" Text="{Binding Time}"/>
            <TextBlock Grid.Row="1" Classes="Normal" VerticalAlignment="Top" TextAlignment="Center" Text="{Binding Date}"/>
        </Grid>
        
    </Grid>
</Window>
